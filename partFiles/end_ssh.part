WORKDIR /home/icub/

COPY Xylo.wav  .
COPY startup.sh .
COPY init.sh .
COPY myprompt /usr/bin/
RUN chmod +x startup.sh && chmod +x init.sh && rm -rf /var/lib/apt/lists/*

USER icub
RUN ssh-keygen -t rsa -f /home/icub/.ssh/id_rsa -q -N "" && touch .ssh/authorized_keys && \
	cat .ssh/id_rsa.pub >> .ssh/authorized_keys

USER root
RUN chown -R icub /home/icub && chown -R icub $SRC_FOLDER

COPY bashrc_iCub /home/icub/.bashrc_iCub
RUN chown -R icub /home/icub/.bashrc_iCub

USER icub
ENTRYPOINT bash